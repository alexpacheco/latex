\def\pd@bframebg{{%
  \pdifsetup{landscape}{%
    \def\pd@tempa{.05\slideheight}%changed from .08 to .05
  }{%
    \def\pd@tempa{.14\slideheight}%
  }%
% Separate color for slide content and footer
  \psset{linecolor=pdcolor2,shadow=true,blur=true,shadowcolor=gray!60}%slide footer
  \psframe*[framearc=.3](.02\slidewidth,.01\slideheight)(.98\slidewidth,\pd@tempa)%
  \psset{linecolor=black,shadow=true,blur=true,shadowcolor=gray!60}%slide content change from pdcolor3 to black 
  \psframe*[framearc=.1](.02\slidewidth,.90\slideheight)(.98\slidewidth,.065\slideheight)%changed from .87 to .9 and .15 to .065
}}

%Slide Title
\def\pd@slidetitle#1{%
  \settowidth\@tempdima{#1}%
  \ifdim\@tempdima>\pd@@titlewidth\@tempdima\pd@@titlewidth\fi
  \rput[Br](0,0){\psframebox*[framearc=.3,fillcolor=pdcolor3,%slide title block
    shadow=true,blur=true,shadowcolor=gray!60]{%
      \parbox[b]\@tempdima{#1}%
    }%
  }%
}

\def\pd@title#1{%
  {\let\thanks\@gobble\let\footnote\@gobble\settowidth\@tempdima{#1}}%
  \ifdim\@tempdima>\pd@@titlewidth\@tempdima\pd@@titlewidth\fi
  \advance\@tempdima-6pt
  \psframebox*[framearc=.3,fillcolor=pdcolor3]{\parbox[b]\@tempdima{#1}}%color of presentation title background
}

